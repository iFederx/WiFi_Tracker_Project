<Page x:Class="Panopticon.AddingStationPages.SelectRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Panopticon.AddingStationPages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      MinHeight="300"
      MinWidth="300"
      Title="SelectRoom" ShowsNavigationUI="False">

    <Grid>
        <TextBlock Text="Aggiungi nuova stazione" FontSize="20" TextAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <ScrollViewer CanContentScroll="True" Height="150" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalScrollBarVisibility="Auto" Margin="0,50,0,60">
            <StackPanel>
                <Button Content="Room 1" Margin="0,0,0,5"/>
                <Button Content="Room 2" Margin="0,0,0,5"/>
                <Button Content="Room 3" Margin="0,0,0,5"/>
                <Button Content="Room 4" Margin="0,0,0,5"/>
                <Button Content="Room 5" Margin="0,0,0,5"/>
                <Button Content="Room 6" Margin="0,0,0,5"/>
                <Button Content="Room 7" Margin="0,0,0,5"/>
                <Button Content="Room 8" Margin="0,0,0,5"/>
                <Button Content="Room 9" Margin="0,0,0,5"/>

            </StackPanel>
        </ScrollViewer>
        <Button x:Name="ButtonNewRoom" Content="Add a new Room" Click="Button_AddNewRoom"  Height="20" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,45" />
        <Button Content="Avanti" Click="Button_RoomSelected" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"/>

    </Grid>
</Page>
